blueprint:
  name: "Comando direto para Alexa"
  description: "Envia texto para Alexa usando send_text_command"
  domain: script
mode: single
icon: mdi:microphone

fields:
  comando:
    name: "Texto para Alexa"
    description: "Digite o que a Alexa deve fazer ou dizer"
    required: true
    selector:
      text:

sequence:
  - service: alexa_devices.send_text_command
    data:
      device_id: "Vinicius Casa"
      text_command: "{{ comando }}"
