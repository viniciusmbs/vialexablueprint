blueprint:
  name: "Comando de Ação via Alexa"
  description: "Envia comandos de texto para Alexa para acionar rotinas ou dispositivos"
  domain: script
mode: single
icon: mdi:voice

fields:
  comando:
    name: "Comando para Alexa"
    description: "Digite o que a Alexa deve fazer"
    required: true
    selector:
      text:

sequence:
  - service: alexa_devices.send_text_command
    data:
      device_id: "media_player.vinicius_casa"
      text_command: "{{ comando }}"

