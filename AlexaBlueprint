icon: mdi:microphone

fields:
  comando:
    name: "Texto para Alexa"
    description: "Digite o comando que ser√° enviado para a Alexa"
    required: true
    selector:
      text:

sequence:
  - service: alexa_devices.send_text_command
    data:
      device_id: "Vinicius Casa"
      text_command: "{{ comando }}"
